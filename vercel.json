{
  "builds": [
    {
      "src": "api/index.py",
      "use": "@vercel/python"
    }
  ],
  "routes": [
    { "src": "^/$", "dest": "/api/index.py" },
    { "src": "^/summarize$", "dest": "/api/index.py" },
    { "src": "^/favicon\\.(ico|png)$", "status": 204 },
    { "src": "^/(robots\\.txt|sitemap\\.xml)$", "status": 204 }
  ],
  "env": {
    "PYTHON_VERSION": "3.11"
  }
}
