{
  "version": 2,
  "functions": {
    "api/main.py": {
      "maxDuration": 60
    }
  },
  "routes": [
    { "src": "^/$", "dest": "api/main.py" },
    { "src": "^/health$", "dest": "api/main.py" },
    { "src": "^/diag$", "dest": "api/main.py" },
    { "src": "^/test-transcript$", "dest": "api/main.py" },
    { "src": "^/summarize$", "dest": "api/main.py" },
    { "src": "^/favicon\\.(ico|png)$", "status": 204 },
    { "src": "^/(robots\\.txt|sitemap\\.xml)$", "status": 204 }
  ]
}